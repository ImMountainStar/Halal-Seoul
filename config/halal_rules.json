  "version": "0.1.0",

  // 이 파일의 기준/출처 설명
  "notes": "사용자 제공 할랄 기준(동물성 원료, 비할랄 동물, 마슈부 원료) 반영",

  // 분류 결과로 사용할 실제 라벨 텍스트
  "status_labels": {
    // 명확히 허용되는 원료
    "halal": "할랄",
    // 명확히 금지되는 원료
    "haram": "하람",
    // 출처 확인이 필요한 항목(명시 규칙에 한해 사용)
    "review": "마슈부"
  },

  "overrides": {
    // material_name과 완전 일치 시 최우선 적용되는 예외 규칙
    "exact": {
      "정제수": {
        // status_labels의 키를 사용 (halal/haram/review)
